<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <%= render :partial => "#{Rails.root}/app/views/shared/links", :target => resource %>
  <fieldset>
  <legend>注册</legend>
  
  <div class="control-group">
    <%= f.label :name, "用户名", {:class => "control-label"} %>
    <div class="controls">
    <%= f.text_field :name, :class => "input-xlarge" %>
    <p class="help-block"></p>
  </div>
  
  <div class="control-group">
    <%= f.label :password, "密码", {:class => "control-label"} %>
    <div class="controls">
    <%= f.password_field :password, :class => "input-xlarge" %>
    <p class="help-block"></p>
  </div>
  
  <div class="control-group">
    <%= f.label :password_confirmation, "密码确认", {:class => "control-label"} %>
    <div class="controls">
    <%= f.password_field :password_confirmation, :class => "input-xlarge" %>
    <p class="help-block"></p>
  </div>

  <div class="form-actions">
    <%= f.submit "确定", :class => "btn btn-primary" %>
  </div>

  </fieldset>
<% end %>

